#accountPage.accountPage
  .accountPage__inner.clearfix
    .accountPage__inner--left.accountPage__header
      %h2 Edit Account
      %h5 アカウントの編集
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
      = link_to "トップページに戻る", :back, class: 'btn'
    .accountPage__inner--right.userForm
      = form_for(current_user) do |f|
        .field
          .fieldLabel
            = f.label :name
          .fieldInput
            = f.text_field :name, autofocus: true
        .field
          .fieldLabel
            = f.label :email
          .fieldInput
            = f.email_field :email
        .actions
          = f.submit "Update", class: 'btn'
