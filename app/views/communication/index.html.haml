.wrapper
  .sideBar__head
      .sideBox
        %p.sideBox__name
          =current_user.name
        %ul.sideBox__community
          %li.sideBox__community__new
            = link_to new_community_path(current_user) do
              new
          %li.sideBox__community__edit
            = link_to edit_user_path(current_user) do
              edit
    .sideBar__community
       - current_user.communities.each do |community|
      .community
        = link_to '#' do
          .community__name
            = community.name
          .community__message
            メッセージはまだありません。
  .chatMain
    .chatMain__head
      .chatMain__head__leftBox
        %h1.chatMain__head__leftBox__currentCommunity
          kick
        %ul.chatMain__head__leftBox__memberList
          Menber:
          %li.menberFirst
            abe
          %li.menberSecond
            suzuki
          %li.menberThird
            sato
      %ul.chatMain__head__editUser
        %li.chatMain__head__editUser__login
          = link_to "#" do
            ログイン
        %li.chatMain__head__editUser__registration
          = link_to "#" do
            新規登録
    .chatMain__area
    .chatMain__form
      .chatMain__form__newMessage
        %input{type: "text", placeholder: "", class:"chatMain__form__newMessage__textBox"}
        %input{type: "submit", value: "Send", class:"chatMain__form__newMessage__submitBtn"} 
